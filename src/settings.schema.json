{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "station": {
      "type": "object",
      "description": "Station configuration settings",
      "properties": {
        "callsign": {
          "type": "string",
          "description": "Your amateur radio callsign"
        },
        "operator": {
          "type": "string",
          "description": "Name of the station operator"
        },
        "qth": {
          "type": "string",
          "description": "Station location (city, country)"
        },
        "grid": {
          "type": "string",
          "description": "Maidenhead grid locator"
        },
        "timezone": {
          "type": "string",
          "description": "Local timezone in IANA format (e.g. Europe/London)"
        },
        "iaruRegion": {
          "type": "string",
          "enum": ["IARU1", "IARU2", "IARU3"],
          "description": "IARU region (IARU1: Europe/Africa/Middle East/Northern Asia, IARU2: Americas, IARU3: Asia-Pacific)"
        },
        "selectedBands": {
          "type": "array",
          "description": "Selected amateur radio bands for operation",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "rig": {
      "type": "object",
      "description": "Radio equipment settings",
      "properties": {
        "port": {
          "type": "integer",
          "description": "UDP port for rigctld connection (default: 4532)"
        },
        "host": {
          "type": "string",
          "description": "Host address for rigctld connection"
        },
        "comPort": {
          "type": "string",
          "description": "Serial COM port for direct radio connection"
        },
        "rigModel": {
          "type": "integer",
          "description": "Rig model number from Hamlib (1 = Dummy/None)"
        },
        "rigctldPath": {
          "type": "string",
          "description": "Path to rigctld executable"
        },
        "enabled": {
          "type": "boolean",
          "description": "Enable CAT control"
        }
      }
    },
    "qrz": {
      "type": "object",
      "description": "QRZ.com API settings",
      "properties": {
        "username": {
          "type": "string",
          "description": "QRZ.com username"
        },
        "password": {
          "type": "string",
          "description": "QRZ.com password"
        },
        "sessionTimeout": {
          "type": "integer",
          "description": "Session timeout in seconds"
        },
        "enabled": {
          "type": "boolean",
          "description": "Enable QRZ.com API services"
        }
      }
    },
    "apis": {
      "type": "object",
      "description": "External API configurations",
      "properties": {
        "nominatim": {
          "type": "object",
          "description": "OpenStreetMap Nominatim API settings",
          "properties": {
            "userAgent": {
              "type": "string",
              "description": "User agent string for API requests"
            },
            "baseUrl": {
              "type": "string",
              "description": "Base URL for Nominatim API"
            },
            "rateLimit": {
              "type": "integer",
              "description": "API rate limit in milliseconds"
            }
          }
        },
        "openMeteo": {
          "type": "object",
          "description": "Open-Meteo weather API settings",
          "properties": {
            "baseUrl": {
              "type": "string",
              "description": "Base URL for Open-Meteo API"
            },
            "rateLimit": {
              "type": "integer",
              "description": "API rate limit in milliseconds"
            }
          }
        },
        "dxheat": {
          "type": "object",
          "description": "DXHeat DX spots API settings",
          "properties": {
            "baseUrl": {
              "type": "string",
              "description": "Base URL for DXHeat API"
            },
            "rateLimit": {
              "type": "integer",
              "description": "API rate limit in milliseconds"
            }
          }
        },
        "wwv": {
          "type": "object",
          "description": "WWV propagation data API settings",
          "properties": {
            "baseUrl": {
              "type": "string",
              "description": "Base URL for WWV propagation data API"
            },
            "rateLimit": {
              "type": "integer",
              "description": "API rate limit in milliseconds"
            }
          }
        }
      }
    },
    "database": {
      "type": "object",
      "description": "Database configuration",
      "properties": {
        "path": {
          "type": "string",
          "description": "Path to the database file"
        },
        "backup": {
          "type": "object",
          "description": "Database backup settings",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable automatic backups"
            },
            "path": {
              "type": "string",
              "description": "Path to backup file"
            },
            "interval": {
              "type": "integer",
              "description": "Backup interval in seconds"
            }
          }
        }
      }
    },
    "ui": {
      "type": "object",
      "description": "User interface settings",
      "properties": {
        "theme": {
          "type": "string",
          "description": "UI color theme (light/dark)"
        },
        "defaultBand": {
          "type": "string",
          "description": "Default band for new QSOs"
        },
        "defaultMode": {
          "type": "string",
          "description": "Default mode for new QSOs"
        },
        "defaultRst": {
          "type": "string",
          "description": "Default RST report"
        },
        "dateFormat": {
          "type": "string",
          "description": "Date display format"
        },
        "timeFormat": {
          "type": "string",
          "description": "Time display format"
        },
        "refreshRates": {
          "type": "object",
          "description": "UI refresh intervals",
          "properties": {
            "clock": {
              "type": "integer",
              "description": "Clock update interval in milliseconds"
            },
            "smeter": {
              "type": "integer",
              "description": "S-meter update interval in milliseconds"
            },
            "propData": {
              "type": "integer",
              "description": "Propagation data update interval in milliseconds"
            }
          }
        }
      }
    },
    "logging": {
      "type": "object",
      "description": "Application logging settings",
      "properties": {
        "level": {
          "type": "string",
          "description": "Log level (debug/info/warn/error)"
        },
        "file": {
          "type": "string",
          "description": "Log file path"
        },
        "maxSize": {
          "type": "integer",
          "description": "Maximum log file size in bytes"
        },
        "maxFiles": {
          "type": "integer",
          "description": "Maximum number of log files to keep"
        }
      }
    },
    "wsjtx": {
      "type": "object",
      "description": "WSJT-X integration settings",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable WSJT-X UDP listener and QSO auto-logging",
          "default": false
        },
        "port": {
          "type": "integer",
          "description": "UDP port for WSJT-X communication (default: 2237)",
          "default": 2237
        },
        "autoLog": {
          "type": "boolean",
          "description": "Automatically log QSOs received from WSJT-X",
          "default": true
        },
        "logOnlyConfirmed": {
          "type": "boolean",
          "description": "Only log confirmed QSOs (not all decodes)",
          "default": true
        }
      }
    }
  }
}
