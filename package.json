{
  "name": "hamledger",
  "private": true,
  "version": "0.0.1",
  "author": "Balazs Valkony - HA5XB",
  "description": "A modern cross-platform logger for radio-amateurs. It just works.",
  "main": "dist/electron/electron/main/main.js",
  "license": "CC-BY-NC-ND-4.0",
  "scripts": {
    "vite:dev": "vite",
    "vite:build": "vue-tsc --noEmit && vite build",
    "vite:preview": "vite preview",
    "ts": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "app:dev": "tsc && concurrently vite \" electron .\" \"tsc -w\"",
    "app:build": "npm run vite:build && tsc",
    "app:preview": "npm run vite:build && tsc && electron .",
    "test": "vitest --environment jsdom",
    "test:coverage": "vitest run --coverage --environment jsdom",
    "build:win": "npm run app:build && electron-builder --win",
    "build:mac": "npm run app:build && electron-builder --mac",
    "build:linux": "npm run app:build && electron-builder --linux",
    "build:all": "npm run app:build && electron-builder -mwl"
  },
  "build": {
    "appId": "com.hamledger.app",
    "productName": "HamLedger",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.utilities",
      "identity": null
    },
    "dmg": {
      "sign": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}",
      "signingHashAlgorithms": null,
      "certificateFile": null,
      "certificatePassword": null
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.12",
    "@types/pouchdb-browser": "^6.1.5",
    "events": "^3.3.0",
    "node-fetch": "^3.3.2",
    "pinia": "^2.1.7",
    "pouchdb": "^9.0.0",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@types/pouchdb": "^6.4.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/test-utils": "^2.4.3",
    "concurrently": "^9.1.0",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "jsdom": "^26.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.11",
    "vitest": "^3.0.0",
    "vue-tsc": "^2.2.0"
  }
}
